								<a href="~/client/images/02.jpg" class="photoswipe-link" data-width="800" data-height="800">
									<img src="~/client/images/02.jpg" alt="">
								</a>
							</div>
						</div>
					</div>
				</div>
			</section>
			@await Html.PartialAsync("Footer")


		</div><!-- eof #box_wrapper -->
	</div><!-- eof #canvas -->


	<script src="~/client/js/compressed.js"></script>
	<script src="~/client/js/main.js"></script>
