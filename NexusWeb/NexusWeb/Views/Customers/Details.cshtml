@model NexusWeb.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Admin/Layout.cshtml";
}

<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between g-3">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">
                                User / <strong class="text-primary small">@Html.DisplayFor(model => model.FullName)</strong>
                            </h3>
                        </div>
                        <div class="nk-block-head-content">
                            <a asp-action="Index" class="btn btn-outline-light bg-white d-none d-sm-inline-flex">
                                <em class="icon ni ni-arrow-left"></em>
                                <span>Back</span>
                            </a>
                            <a asp-action="Index" class="btn btn-icon btn-outline-light bg-white d-inline-flex d-sm-none">
                                <em class="icon ni ni-arrow-left"></em>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="nk-block">
                    <div class="card">
                        <div class="card-aside-wrap">
                            <div class="card-content">
                                <ul class="nav nav-tabs nav-tabs-mb-icon nav-tabs-card">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">
                                            <em class="icon ni ni-user-circle"></em>
                                            <span>Personal</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="card-inner">
                                    <div class="nk-block">
                                        <div class="nk-block-head">
                                            <h5 class="title">Personal Information</h5>
                                            <p>Basic info, like your name and address, that you use on Nio Platform.</p>
                                        </div>
                                        <div class="profile-ud-list">
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Title</span>
                                                    <span class="profile-ud-value">Mr.</span>
                                                </div>
                                            </div>
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Full Name</span>
                                                    <span class="profile-ud-value">@Html.DisplayFor(model => model.FullName)</span>
                                                </div>
                                            </div>
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Date of Birth</span>
                                                    <span class="profile-ud-value">10 Aug, 1980</span>
                                                </div>
                                            </div>
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Mobile Number</span>
                                                    <span class="profile-ud-value">@Html.DisplayFor(model => model.Phone)</span>
                                                </div>
                                            </div>
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Email Address</span>
                                                    <span class="profile-ud-value"> @Html.DisplayFor(model => model.Address)</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="nk-block">
                                        <div class="nk-block-head nk-block-head-line">
                                            <h6 class="title overline-title text-base">Additional Information</h6>
                                        </div>
                                        <div class="profile-ud-list">
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">UserName</span>
                                                    <span class="profile-ud-value">@Html.DisplayFor(model => model.FullName)</span>
                                                </div>
                                            </div>
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Status</span>
                                                    @{
                                                        if (Model.Status == 1)
                                                        {
                                                            <span class="profile-ud-value text-success">
                                                                activate
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="profile-ud-value text-danger">
                                                                not activated
                                                            </span>
                                                        }
                                                    }

                                                </div>
                                            </div>
                                            <div class="profile-ud-item">
                                                <div class="profile-ud wider">
                                                    <span class="profile-ud-label">Roler</span>
                                                    <span class="profile-ud-value">
                                                        @{
                                                            switch (Model.Level)
                                                            {
                                                                case 0:
                                                                    <p>Customer</p>
                                                                    ; break;
                                                                case 1:
                                                                    <p>Retail Store Employee</p>
                                                                    ; break;
                                                                case 2:
                                                                    <p>Technical staff</p>
                                                                    ; break;
                                                                case 3:
                                                                    <p>Accounts Department Officer</p>
                                                                    ; break;
                                                                case 4:
                                                                    <p>Admin</p>
                                                                    ; break;

                                                            }
                                                        }

                                                        @* Html.DisplayFor(model => model.User.Status) *@
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="nk-divider divider md"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>